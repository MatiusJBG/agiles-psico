@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<link href="css/index.css" rel="stylesheet" />

<AuthorizeView>
    <Authorized>
        <div class="hero-section">
            <div class="container">
                <div class="hero-content">
                    <h1 class="hero-title">Bienvenido a Hotel Reserv</h1>
                    <p class="hero-subtitle">Descubre los mejores hoteles en Ambato, Ecuador</p>
                    <div class="hero-actions">
                        <a href="/hotels" class="btn btn-primary btn-lg">
                            <i class="fas fa-hotel"></i>
                            Ver Hoteles
                        </a>
                        <a href="/reservations" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-calendar-check"></i>
                            Mis Reservaciones
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="features-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-hotel"></i>
                            </div>
                            <h3>Hoteles de Calidad</h3>
                            <p>Selección cuidadosa de los mejores hoteles en Ambato con calificaciones de 0 a 4 estrellas.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <h3>Reservaciones Fáciles</h3>
                            <p>Proceso simple y rápido para reservar tu estadía con precios transparentes.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-star"></i>
                            </div>
                            <h3>Mejor Experiencia</h3>
                            <p>Interfaz moderna y elegante diseñada para brindarte la mejor experiencia de usuario.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            NavigationManager.NavigateTo("/login");
        }
    </NotAuthorized>
</AuthorizeView>